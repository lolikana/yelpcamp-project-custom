<% layout("layout/boilerplate.ejs") %>
<h1 class="page-h1">Edit Campground</h1>

<form action="/campgrounds/<%= campground._id %>?_method=PUT" method="POST">
  <div class="flex gap-4">
    <div class="flex flex-col">
      <label for="title" class="mb-2 block text-sm font-medium text-gray-900"
        >Title</label
      >
      <input
        class="block w-full rounded-lg border border-gray-300 bg-gray-50 p-2.5 text-sm text-gray-900 focus:border-blue-500 focus:ring-blue-500"
        type="text"
        id="title"
        name="campground[title]"
        value="<%= campground.title %> "
        required
      />
    </div>
    <div class="flex flex-col">
      <label for="location" class="mb-2 block text-sm font-medium text-gray-900"
        >Location</label
      >
      <input
        class="block w-full rounded-lg border border-gray-300 bg-gray-50 p-2.5 text-sm text-gray-900 focus:border-blue-500 focus:ring-blue-500"
        type="text"
        id="location"
        name="campground[location]"
        value="<%= campground.location %>"
        required
      />
    </div>
  </div>
  <button class="btn-submit">Edit Campground</button>
</form>
<footer class="m-2">
  <div>
    <a href="/campgrounds" class="btn-back">Back to list</a>
  </div>
</footer>
